    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css">

    <style>
        table thead {
            background-color: #5995fd;
            color: white;
        }
        h2 {
            text-align: center;
            padding: 50px;
        }
    </style>

</head>
<body>
    <h2>Usuarios</h2>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table id="Personas" class="table table-bordered  display nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Documento</th>
                            <th>Nombres</th>
                            <th>Apellido1</th>
                            <th>Apellido2</th>
                            <th>Ciudad</th>
                            <th>Departamento</th>
                            <th>Direccion</th>
                            <th>Celular</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.Documento</td>
                                <td>@i.Nombres</td>
                                <td>@i.Apellido1</td>
                                <td>@i.Apellido2</td>
                                <td>@i.Ciudad</td>
                                <td>@i.Departamento</td>
                                <td>@i.Direccion</td>
                                <td>@i.Celular</td>
                                <td>@i.Email</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Documento</th>
                            <th>Nombres</th>
                            <th>Apellido1</th>
                            <th>Apellido2</th>
                            <th>Ciudad</th>
                            <th>Departamento</th>
                            <th>Direccion</th>
                            <th>Celular</th>
                            <th>Email</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>


